
@using DbMvc.Models.Entity
@model List<Tbl_About>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}



    <br />
    <h2>Hakkında Düzenleme Sayfası</h2>
    <br />
    <form method="post">
        @foreach (var item in Model)
        {

            <label>İsim</label>
            <input type="text" name="name" value="@item.name" class="form-control" />
            <br />
            <label>Soyad</label>
            <input type="text" name="surname" value="@item.surname" class="form-control" />
            <br />
            <label>Adres</label>
            <input type="text" name="addres" value="@item.addres" class="form-control" />
            <br />
            <label>Telefon</label>
            <input type="text" name="phone" value="@item.phone" class="form-control" />
            <br />
            <label>Mail</label>
            <input type="text" name="mail" value="@item.mail" class="form-control" />
            <br />
            <label>Açıklama</label>
            <textarea rows="10" class="form-control" name="comment">@item.comment</textarea>
            <br />
            <label>Resim</label>
            <input type="text" name="image" value="@item.image" class="form-control" />


        }
        <br /> <button class="btn btn-success">Güncelle</button>
    </form>
