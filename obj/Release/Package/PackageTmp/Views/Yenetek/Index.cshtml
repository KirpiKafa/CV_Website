@using DbMvc.Models.Entity
@model List<Tbl_Skills>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@{ 
    string renk = "";
}

@{ 
    string labelrenk = "";
}
<!DOCTYPE html>
<html lang="en">
<head>

</head>
<body class="hold-transition sidebar-mini">
    <div class="wrapper">
            <!-- Main content -->
            <section class="content">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="card">
                                <div class="card-header">
                                    <h3 class="card-title">Yetenek Listem</h3>
                                </div>
                                <!-- /.card-header -->
                                <div class="card-body">
                                    <a href="/Yenetek/YeniYetenek" class="btn btn-info">Yetenek Ekle</a> <br /><br />
                                    <table class="table table-bordered">
                                        <thead>
                                            <tr>
                                                <th style="width: 10px">#</th>
                                                <th>Yetenek İsmi</th>
                                                <th>Tamamlama Seviyesi</th>
                                                <th style="width: 40px">Yüzde</th>
                                                <th>Düzenle</th>
                                                <th>Sil</th>

                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach(var item in Model) {
                                                if(item.rate >= 0 && item.rate <= 50){
                                                    renk = "progress-bar bg-danger";
                                                    labelrenk = "badge bg-danger";
                                                }
                                                if(item.rate >= 51 && item.rate <= 70)
                                                {
                                                    renk = "progress-bar bg-warning";
                                                    labelrenk = "badge bg-warning";
                                                }

                                                if(item.rate >= 71 && item.rate <= 84)
                                                {
                                                    renk = "progress-bar bg-primary";
                                                    labelrenk = "badge bg-primary";
                                                }
                                                if(item.rate >= 85 && item.rate <= 100)
                                                {
                                                    renk = "progress-bar bg-success";
                                                    labelrenk = "badge bg-success";

                                                }
                                            <tr>
                                                <td>@item.ID</td>
                                                <td>@item.skill</td>
                                                <td>
                                                    <div class="progress progress-xs">
                                                        <div class="@renk" style="width: @item.rate%"></div>
                                                    </div>
                                                </td>
                                                <td><span class="@labelrenk">@item.rate%</span></td>


                                                <td>
                                                    <a class="btn btn-info btn-sm" href="/Yenetek/YetenekDuzenle/@item.ID">
                                                        <i class="fas fa-pencil-alt"> Düzenle</i>
                                                    </a>
                                                </td>
                                                <td>
                                                    <a class="btn btn-danger btn-sm" href="/Yenetek/YetenekSil/@item.ID">
                                                        <i class="fas fa-trash"> Sil</i>
                                                    </a>
                                                </td>

                                            </tr>
                                            }
                                            
                                            
                                            
                                        </tbody>
                                    </table>
                                </div>                                
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </div>
</body>
</html>