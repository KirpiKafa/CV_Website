@using DbMvc.Models.Entity
@model List<Tbl_Education>



@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h2>Eğitim Hayatım</h2>

<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th> Başlık</th>
        <th>Alt Başlık</th>
        <th>Alt Başlık 2</th>
        <th>GNO</th>
        <th>Tarih</th>
        <th>Sil</th>
        <th>Düzenle</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @item.ID
            </td>
            <td>
                @item.title
            </td>
            <td>
                @item.subtitle
            </td>
            <td>
                @item.subtitle2
            </td>
            <td>
                @item.gno
            </td>
            <td>
                @item.date
            </td>
            <td>
                <a class="btn btn-danger btn-sm" href="/Egitim/EgitimSil/@item.ID">
                    <i class="fas fa-trash"> Sil</i>
                </a>
            </td>
            <td>
                <a class="btn btn-info btn-sm" href="/Egitim/EgitimDuzenle/@item.ID">
                    <i class="fas fa-pencil-alt"> Düzenle</i>
                </a>
            </td>



        </tr>
    }
</table>

<a href="/Egitim/EgitimEkle" class="btn btn-primary">Yeni Deneyim Ekle</a>

