@model DbMvc.Models.Entity.Tbl_Certificate
@{
    ViewBag.Title = "YeniSertifika";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h2>Yeni Sertifika Ekleme Sayfası</h2>
<br />
<form method="post">
    @Html.Label("Sertifika Açıklaması")
    @Html.TextBoxFor(x => x.comment, new { @class = "form-control" })<br />
    @Html.Label("Tarih")
    @Html.TextBoxFor(x => x.date, new { @class = "form-control" })<br />
    <br />
    <button class="btn btn-primary">Kaydet</button>

</form>


